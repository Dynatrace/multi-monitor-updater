{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "react-hooks", "no-secrets", "formatjs"],
  "extends": ["plugin:react/recommended", "plugin:@typescript-eslint/recommended"],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "react/no-unescaped-entities": "off",
    "react/prop-types": "off",
    "no-secrets/no-secrets": [
      "error",
      {
        "tolerance": 4.3, // avoid detection false-positives for autogenerated i18n message keys
        "additionalRegexes": {
          "Dynatrace Token SSO": "dt0[a-zA-Z]{1}[0-9]{2}\\.[A-Z0-9]{8}\\.[A-Z0-9]{64}",
          "Dynatrace Token SSO Internal services": "dt0[a-zA-Z]{1}[0-9]{2}\\.[A-Za-z0-9\\-]+\\.[A-Z0-9]{64}",
          "Dynatrace Token Agents ODIN Agent Token v1": "dt0[a-zA-Z]{1}[0-9]{2}\\.[a-z0-9-]+\\.[A-Fa-f0-9]{64}",
          "Dynatrace Token Agents Tenant Token": "dt0[a-zA-Z]{1}[0-9]{2}\\.[a-zA-Z0-9]{24}",
          "Dynatrace Token Cluster REST APIs": "dt0[a-zA-Z]{1}[0-9]{2}\\.[A-Z0-9]{24}\\.[A-Z0-9]{64}"
        }
      }
    ],
    "formatjs/enforce-id": [
      "error",
      {
        "idInterpolationPattern": "[sha1:contenthash:base64:16]"
      }
    ],
    "formatjs/enforce-default-message": "error", // Enforces setting a message for each message
    "formatjs/enforce-placeholders": "error", // Makes sure all messages placeholders have the values passed as params
    "formatjs/no-literal-string-in-jsx": "error" // Enables checks for using translatable content on additional properties (specified as a list)
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  }
}
